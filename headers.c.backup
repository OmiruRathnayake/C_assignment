#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
#include "headers.h"

void loadStairs(Stairs *stairs){
    FILE *file = fopen("stairs.txt", "r");

    if (file == NULL){
        perror("Error opening file!");
        exit(1);
    }

    int capacity;   //the file we are checking the lines must have a empty line at the end to get the true capacity.
    int count;
    char character;

    while ((character = fgetc(file)) != EOF) {
        if (character == '\n') {
            capacity++;
        }
    }
    
    stairs = malloc(sizeof(Stairs) * capacity);

    printf("%d\n", capacity);
}